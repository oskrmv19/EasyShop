<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.oskr19.easyshop.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment" />
        <action
            android:id="@+id/homeToSearch"
            app:destination="@id/searchFragment"
            app:enterAnim="@android:anim/fade_in" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.oskr19.easyshop.screens.search.presentation.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/searchToResult"
            app:destination="@id/searchResultFragment"
            app:enterAnim="@android:anim/fade_in" />
        <argument
            android:name="query"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.oskr19.easyshop.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories" >
        <action
            android:id="@+id/action_categoriesFragment_self"
            app:destination="@id/categoriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.oskr19.easyshop.screens.detail.presentation.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/detailToBottomSheet"
            app:destination="@id/attributesListDialogFragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.oskr19.easyshop.screens.search.presentation.SearchResultFragment"
        android:label="fragment_search_result"
        tools:layout="@layout/fragment_search_result" >
        <action
            android:id="@+id/resultsToDetail"
            app:destination="@id/detailFragment" />
        <argument
            android:name="query"
            app:argType="string" />
        <action
            android:id="@+id/resultToSearch"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/attributesListDialogFragment"
        android:name="com.oskr19.easyshop.screens.detail.presentation.AttributesListDialogFragment"
        android:label="AttributesListDialogFragment"
        tools:layout="@layout/attributes_bottom_sheet"/>
</navigation>